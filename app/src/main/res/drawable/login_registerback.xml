<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background for the shape -->
    <gradient
        android:startColor="#1687E0"
        android:angle="100"
        android:endColor="#EF1212"/>         <!-- Angle of the gradient -->

    <!-- Corner radius for rounded corners -->
    <corners android:radius="20dp" /> <!-- Rounded corners -->

    <!-- Optional border around the shape -->
    <stroke
        android:width="5dp" />   <!-- Border color -->

    <!-- Optional padding inside the shape -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

</shape>
